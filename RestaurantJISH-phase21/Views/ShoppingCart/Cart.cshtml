@using RestaurantJISH_phase21.Models
@{
    ViewBag.Title = "Cart";
}
<div style="margin-top:100px">
   <table class="table-bordered" width="100%">
       <tr>
           <th>Option</th>
           <th>Restaurant</th>        
           <th>FoodName</th>
           <th>FoodPrice</th>
           <th>FoodQuantity</th>
           <th>total</th>
       </tr>
       @{ 
           double s = 0;
           double op = 0;
       }
       @if (Session["Cart"] != null)
       {
       foreach (Item item in (List<Item>)Session["Cart"])
       {
           s = s + item.product.price * item.quantity;
           op = op + 1;
        <tr>
            <td>@op</td>
            <td><a href="@Url.Action("menu", "Restaurant", new { id = item.restaurant.RestaurantId })">@item.restaurant.Name</a></td>
            <td>@item.product.foodName</td>
            <td>@item.product.price</td>
            <td>@item.quantity</td>
            <td>@(item.product.price * item.quantity)</td>
        </tr>

       }
       <tr>
       <td colspan="6" align=right>sum:
       @s</td>
       </tr>
       }
   </table>
    </div>

